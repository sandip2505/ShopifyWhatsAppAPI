<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Status</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            color: #fff;
        }

        .container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 90%;
            width: 500px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.8s ease-out forwards;
        }

        .status-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            border-radius: 50%;
            background: #4CAF50;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            animation: pulse 2s infinite;
        }

        .api-icon {
            width: 40px;
            height: 40px;
            fill: white;
            z-index: 1;
        }

        .status-text {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            opacity: 0;
            animation: slideUp 0.8s ease-out 0.4s forwards;
        }

        .connection-text {
            color: #4CAF50;
            font-size: 1.1rem;
            opacity: 0;
            animation: slideUp 0.8s ease-out 0.6s forwards;
        }

        @keyframes pulse {
            0% {
                transform: scale(0.95);
                opacity: 0.9;
            }
            50% {
                transform: scale(1.05);
                opacity: 1;
            }
            100% {
                transform: scale(0.95);
                opacity: 0.9;
            }
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 1.5rem;
            }
            
            .status-text {
                font-size: 1.2rem;
            }
            
            .connection-text {
                font-size: 1rem;
            }
            
            .status-icon {
                width: 60px;
                height: 60px;
            }
            
            .api-icon {
                width: 30px;
                height: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="status-icon">
            <svg class="api-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L2 7V17L12 22L22 17V7L12 2ZM12 4.19L19.8 8.037L12 12L4.2 8.037L12 4.19ZM4 15.913V9.087L11.8 13.05V19.81L4 15.913ZM13.2 19.81V13.05L21 9.087V15.913L13.2 19.81Z"/>
            </svg>
        </div>
        <h1 class="status-text">API is running</h1>
        <p class="connection-text">Connected to MongoDB</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.querySelector('.container');
            
            // Add hover effect
            container.addEventListener('mouseover', () => {
                container.style.transform = 'scale(1.02)';
                container.style.transition = 'transform 0.3s ease';
            });
            
            container.addEventListener('mouseout', () => {
                container.style.transform = 'scale(1)';
            });
        });
    </script>
</body>
</html>